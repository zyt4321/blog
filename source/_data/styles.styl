/* 有序和无序图标设置 */
ol {
  margin-top: .4rem;
  padding: 0 0 0 .8rem;
  list-style: none;
  counter-reset: ol-li;
}

ul {
  margin-top: .4rem;
  padding: 0 0 0 .8rem;
  list-style: none;
  counter-reset: ul-li;
  color: #000;
}

/*顶部设置*/
.header {
  position: inherit;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  left: 0;
  top: 0;
  width: 100%;
  background: #fff;
  z-index: 9;
  height: 60px;
}

.header-inner {
  width: 60%;
  padding: 5px 0 5px;
}

// 左上角图标
.brand {
  color: #4ea7f9;
  background: #ffffff
}
.brand:hover{
  color: #4ea7f9
}
// 左上角图标
.site-meta {
  float left;
}

// 左上角文章标题
.site-title {
  line-height: 1.85;
}

// 导航条
.menu {
  margin-top: 2px;
  float: right;
}

.post-eof {
  margin: 20px auto 10px;
  width: 101%;
}

.posts-expand .post-title {
  text-align: left;
}

.posts-expand .post-meta {
  margin: 3px 0 6px 0;
  text-align: left;
}

.post-button {
  margin-top: 40px;
  text-align: right;
}

.post-body {
  position relative;
  min-height: 120px;
}

.post-gallery-index {
  position: absolute;
  top: 0;
  width: 180px;
  height: 120px;
  margin-top: 0;
  right: 0;
  display: inline-block;
}

.post-gallery-index img{
  width: 100%;
  height: 100%;
  border-radius: 4px;
  border: 1px solid #f0f0f0;
  cursor: pointer;
}

.post-body-content {
  margin-right: 200px;
}
